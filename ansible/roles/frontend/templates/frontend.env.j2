# API Configuration
NEXT_PUBLIC_API_URL={{ next_public_api_url }}

# Application Settings
NEXT_PUBLIC_APP_NAME={{ app_name }}
NEXT_PUBLIC_APP_URL=https://{{ domain_name }}

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS={{ enable_analytics | default(true) }}
NEXT_PUBLIC_ENABLE_SENTRY={{ enable_monitoring | default(false) }}

# Third-party Services
{% if next_public_google_analytics_id is defined %}
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID={{ next_public_google_analytics_id }}
{% endif %}

{% if next_public_sentry_dsn is defined %}
NEXT_PUBLIC_SENTRY_DSN={{ next_public_sentry_dsn }}
{% endif %}

# Environment
NODE_ENV=production