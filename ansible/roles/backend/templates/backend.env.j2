# Django settings
DEBUG=False
SECRET_KEY={{ django_secret_key }}
ALLOWED_HOSTS={{ django_allowed_hosts | join(',') }}
DJANGO_SETTINGS_MODULE={{ django_settings_module }}

# Database
DATABASE_URL=postgresql://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port }}/{{ db_name }}

# Redis
REDIS_URL=redis://:{{ redis_password }}@{{ redis_host }}:{{ redis_port }}/0

# CORS
CORS_ALLOWED_ORIGINS=https://{{ domain_name }},https://www.{{ domain_name }}

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST={{ email_host | default('smtp.gmail.com') }}
EMAIL_PORT={{ email_port | default(587) }}
EMAIL_HOST_USER={{ email_user | default('') }}
EMAIL_HOST_PASSWORD={{ email_password | default('') }}
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL={{ default_from_email | default('noreply@' + domain_name) }}

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# Media files
MEDIA_ROOT={{ backend_dir }}/media
MEDIA_URL=/media/

# Static files
STATIC_ROOT={{ backend_dir }}/staticfiles
STATIC_URL=/static/

# Monitoring
{% if sentry_dsn is defined %}
SENTRY_DSN={{ sentry_dsn }}
{% endif %}