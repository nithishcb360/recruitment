{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(python3:*)",
      "Bash(source:*)",
      "Bash(pip install:*)",
      "Bash(django-admin startproject:*)",
      "Bash(python manage.py:*)",
      "Bash(python:*)",
      "Bash(chmod:*)",
      "Bash(sed:*)",
      "Bash(pnpm build:*)",
      "Bash(git commit:*)",
      "Bash(ansible:*)",
      "Bash(grep:*)",
      "Bash(export LC_ALL=en_US.UTF-8)",
      "Bash(export LANG=en_US.UTF-8)",
      "Bash(find:*)"
    ],
    "deny": []
  }
}